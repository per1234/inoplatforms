{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/per1234/inoplatforms/main/registry/assets/schema.json",
  "title": "inoplatforms registry JSON schema",
  "description": "inoplatforms is a catalog of Arduino boards platforms. The catalog is built around the registry data file.",
  "$defs": {
    "package-provider-id": {
        "type": "integer",
        "minimum": 0
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repository": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "url": {
              "type": "string",
              "format": "iri"
            },
            "ref": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "notes": {
              "type": "string"
            }
          }
        },
        "notes": {
          "type": "string"
        }
      }
    }
  },
  "type": "array",
  "uniqueItems": true,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "anyOf": [
      {
        "required": [
          "id",
          "package-index"
        ]
      },
      {
        "required": [
          "id",
          "packages"
        ]
      }
    ],
    "properties": {
      "id": {
            "$ref": "#/$defs/package-provider-id"
      },
      "package-index": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "url"
        ],
        "properties": {
          "url": {
            "type": "string",
            "format": "iri"
          },
          "source": {
            "$ref": "#/$defs/source"
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "packages": {
        "type": "array",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string",
                "minLength": 1
            },
            "platforms": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "architecture"
                ],
                "properties": {
                  "architecture": {
                    "type": "string",
                    "minLength": 1
                  },
                  "source": {
                    "$ref": "#/$defs/source"
                  },
                  "installation-references": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": [
                        "url"
                      ],
                      "properties": {
                        "url": {
                          "type": "string",
                          "minLength": 1
                        },
                        "label": {
                          "type": "string",
                          "minLength": 1
                        }
                      }
                    }
                  },
                  "tools-dependencies": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                      "type": "object",
                      "additionalProperties": false,
                      "required": [
                        "packager",
                        "package-provider-id"
                      ],
                      "properties": {
                        "packager": {
                          "type": "string",
                          "minLength": 1
                        },
                        "package-provider-id": {
                          "$ref": "#/$defs/package-provider-id"
                        }
                      }
                    }
                  },
                  "notes": {
                    "type": "string"
                  }
                }
              }
            },
            "tools": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 1
                  },
                  "source": {
                    "$ref": "#/$defs/source"
                  },
                  "notes": {
                    "type": "string"
                  }
                }
              }
            },
            "notes": {
              "type": "string"
            }
          }
        }
      },
      "notes": {
        "type": "string"
      }
    }
  }
}
